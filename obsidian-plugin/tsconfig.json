{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"esModuleInterop": true,

		"lib": ["dom", "es5", "scripthost", "es2017"],
		"paths": {
			"@/*": ["./src/*"],
			"@domain/*": ["./src/domain/*"],
			"@application/*": ["./src/application/*"],
			"@infrastructure/*": ["./src/infrastructure/*"],
			"@presentation/*": ["./src/presentation/*"]
		}
	},
	"include": ["**/*.ts"]
}
